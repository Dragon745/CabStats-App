rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only access their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Users can access their own rides
      match /rides/{rideId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // Users can access their own account balances
      match /accountBalances/{accountId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // Users can access their own ledger entries (includes refuel expenses)
      match /ledger/{transactionId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // Users can access their own account transfers
      match /accountTransfers/{transferId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // Users can access their own pending fuel allocation
      match /pendingFuelAllocation/{docId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // Users can access their own refuel records
      match /refuels/{refuelId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
